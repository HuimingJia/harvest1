<div class="row">
  <div class="col-md-12">
    <div class="col-md-5">
      <div id="Carousel" class="center carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#Carousel" data-slide-to="0" class="active"></li>
          <% (1..product.product_images.length-1).each do |i|%>
          <li data-target="#Carousel" data-slide-to="<%= i %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
          <% if product.product_images.all.length == 0 %>
          <div class="item active">
            <img src="http://placehold.it/800x200/20BFA9/ffffff&text=This is Third example">
          </div>
          <% else %>
          <div class="item active">
            <%= image_tag product.product_images.all.first.image.url(:large) %>
          </div>
          <% @product.product_images[1..-1].each do |product_image|%>
          <div class="item">
            <%= image_tag product_image.image.url(:large) %>
          </div>
          <% end %>
          <% end %>
          <!-- Controls -->
          <a class="left carousel-control" href="#Carousel" data-slide="prev">
            <span class="icon-prev"></span>
          </a>
          <a class="right carousel-control" href="#Carousel" data-slide="next">
            <span class="icon-next"></span>
          </a>
        </div>
      </div><!--slider-->
    </div>

    <div class="col-md-7">
      <div class="product-name"><%= product.name %></div>
        <div class="product-description"><%= product.description %></div>
        <div class="product-discount"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
        <hr>
        <div class="product-price"><%= product.price %></div>
        <hr>
        <div class="btn-group cart">
          <button type="button" class="btn btn-success">
            Cancel
          </button>
        </div>
        <div class="btn-group wishlist">
          <button type="button" class="btn btn-danger">
            Add to Shoplist
          </button>
        </div>
      </div>
    </div>
  </div>
