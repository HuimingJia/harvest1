<div class="search row">
  <div class="col-sm-2">
    <%= render :partial => 'products/sidebar',locals: { query: @query = @query} %>
  </div>
  <div class="col-sm-10">
    <p id="notice"><%= notice %></p>
    <% if @products.blank? %>
    <h1 class="text-center" style="padding-top:100px;">There are no products containing the term "<%= @query %>".</h1>
    <% end %>

<% if @products.length > 0%>
    <section>
      <div class="row">
        <div class="col-md-12 text-center">
          <h2 class="section-heading">Popular Products</h2>
          <hr class="section-hr">
        </div>
      </div>
      <div class="row">
        <%= render 'shared/products_sm', locals: { products: @products} %>
        <%= render 'shared/product_modal' %>
      </div>
    </section>
    <% end%>

    <% if @stores.length > 0%>
    <section>
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">Popular Stores</h2>
          <hr class="section-hr">
        </div>
      </div>
      <div class="row">
        <%= render 'shared/stores', locals: { stores: @stores } %>
      </div>
    </section>
    <% end %>
  </div>
</div>
