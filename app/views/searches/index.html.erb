<p id="notice"><%= notice %></p>
<% if @results.blank? %>
 <h4>There are no results containing the term <%= params[:q] %>.</h4>
<% end %>

<section>
    <div class="row">
      <div class="col-md-12 text-center">
        <h2 class="section-heading">Popular Products</h2>
        <hr class="section-hr">
      </div>
  </div>
  <div class="row">
        <%= render 'shared/products', locals: { products: @products} %>
        <%= render 'shared/product_modal' %>
  </div>
</section>
</div>

<% if @stores.length > 0%>
<section>
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Popular Stores</h2>
        <hr class="section-hr">
      </div>
  </div>
  <div class="row">
        <%= render 'shared/stores', locals: { stores: @stores } %>
  </div>
</section>
<% end %>
