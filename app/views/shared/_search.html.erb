<div class="row">
  <div class="col-md-6">
		<%= form_tag search_path, method: :get do %>
      <div id="custom-search-input">
          <div class="input-group col-md-12">
            <div class="ddl-select input-group-btn">
							<%= select_tag(:option, options_for_select([['All'],['Products'], ['Stores'], ['Markets']], selected: :option),
							 id: 'selectBox', class: "form-control")%>
              </div>
							<%= text_field_tag :q, params[:q], type: "text", class: "form-control input-lg", placeholder: "Search Products, Stores, or Markets..."%>
							<span class="input-group-btn">
										<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
												<span class="glyphicon glyphicon-search"></span>
										<% end %>
              </span>
              <% end %>
          </div>
      </div>
      <h5><p>&nbsp;&nbsp;&nbsp;Recommended Searches: <a href="/search?utf8=✓&option=All&q=gluten-free&button=" style="color:blue">gluten-free,</a><a href="/search?utf8=✓&option=All&q=halibut&button=" style="color:blue"> Halibut,</a><a href="/search?utf8=✓&option=All&q=farmers+markets&button=" style="color:blue"> Farmers markets</a></p></h5>
  </div>
</div>
