                              <td align="center" valign="top" style="padding-top:0px;padding-bottom:0px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                  <tr>
                                    <td align="center" valign="top" style="border-top:1px solid #C8C8C8;"></td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </table>
                    <!-- // FLEXIBLE CONTAINER -->
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <% else %>
          <!-- MODULE ROW // -->
          <tr>
            <td align="center" valign="top">
              <!-- CENTERING TABLE // -->
              <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                  <td align="center" valign="top">
                    <!-- FLEXIBLE CONTAINER // -->
                    <table border="0" cellpadding="30" cellspacing="0" width="700" class="flexibleContainer">
                      <tr>
                        <td valign="top" width="700" class="flexibleContainerCell">

                          <!-- CONTENT TABLE // -->
                          <table align="left" border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                              <td align="left" valign="top" class="flexibleContainerBox">
                                <table border="0" cellpadding="0" cellspacing="0" width="225" style="max-width:100%;">
                                  <tr>
                                    <td align="left" class="textContent">
                                      <% products[0..1].each do |product|%>
                                      <div class="col-sm-6">
                                        <% if product.product_images.length > 0 %>
                                        <div style="height:200px;width:200px;background:url(http://<%=  ENV['HOST'] + product.product_images.all.first.image.url(:medium)%>);background-size: 100% 100%,cover;
                                          background-repeat: no-repeat;
                                          background-position: center;"></div>
                                        <% else %>
                                        <div style="height:200px;width:200px;background:url(http://<%=  ENV['HOST'] + product_background[product.group]%>);background-size: 100% 100%,cover;
                                          background-repeat: no-repeat;
                                          background-position: center;"></div>
                                        <% end %>
                                      </div>
                                      <h4  style="text-align:center"><%= product.name %></h4>
                                      <br>
                                      <% end %>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                              <td align="right" valign="top" class="flexibleContainerBox">
                                <table class="flexibleContainerBoxNext" border="0" cellpadding="0" cellspacing="0" width="475" style="max-width:100%;">
                                  <tr>
                                    <td align="left" class="textContent">
                                      <h3 style="color:#5F5F5F;line-height:125%;font-family:Helvetica,Arial,sans-serif;font-size:20px;font-weight:normal;margin-top:0;margin-bottom:3px;text-align:left;"><%= link_to store.name, store%></h3>
                                      <div style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:0;color:#5F5F5F;line-height:135%;">
                                        <% store.markets[0..2].each do |market|%>
                                        <h4><%= link_to market.name, market%></h4>
                                        <p  style="padding-left:20px;"><%= market.address%>, <%= market.city %>, <%= market.state%>, <%= market.zipcode %></p>
