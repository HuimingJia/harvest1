@media only screen and (-webkit-device-pixel-ratio:1){
}
@media only screen and (-webkit-device-pixel-ratio:1.5){
}
@media only screen and (min-device-width : 320px) and (max-device-width:568px) {
}
a:link{
  color: green;
  text-decoration: none;
}
</style>
<center style="background-color:#E1E1E1;">
  <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="bodyTable" style="table-layout: fixed;max-width:100% !important;width: 100% !important;min-width: 100% !important;">
    <tr>
      <td align="center" valign="top" id="bodyCell">
        <table bgcolor="#FFFFFF"  border="0" cellpadding="0" cellspacing="0" width="700" id="emailBody">
          <tr>
            <td align="center" valign="top">
              <table border="0" cellpadding="0" cellspacing="0" width="100%" style="color:#FFFFFF;" bgcolor="#5cb85c">
                <tr>
                  <td align="center" valign="top">
                    <table border="0" cellpadding="0" cellspacing="0" width="700" class="flexibleContainer">
                      <tr>
                        <td align="center" valign="top" width="700" class="flexibleContainerCell">
                          <table border="0" cellpadding="30" cellspacing="0" width="100%">
                            <tr>
                              <td align="center" valign="top" class="textContent">
                                <h1 style="color:#FFFFFF;line-height:100%;font-family:Helvetica,Arial,sans-serif;font-size:35px;font-weight:normal;margin-bottom:5px;text-align:center;">Harvest Weekly Specials!</h1>
                                <h2 style="text-align:center;font-weight:normal;font-family:Helvetica,Arial,sans-serif;font-size:23px;margin-bottom:10px;color:#387238;line-height:135%;"><%= link_to "Go to Home Page", root_url%></h2>
                                <div style="text-align:center;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:0;color:#FFFFFF;line-height:135%;">Hundreds of artists flocked to campus for the annual festival from April 27 to 30. Dance, music and theater performances took place each day of the festival, which was themed around sustainability. </div>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <% count = 0 %>
          <% @stores.each do |store, products|%>
          <% count = count + 1%>
          <% if count % 2 == 0 %>
          <!-- MODULE ROW // -->
          <tr>
            <td align="center" valign="top">
              <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                  <td align="center" valign="top">
                    <table border="0" cellpadding="30" cellspacing="0" width="700" class="flexibleContainer">
                      <tr>
                        <td valign="top" width="700" class="flexibleContainerCell">
                          <table align="left" border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                              <td align="left" valign="top" class="flexibleContainerBox">
                                <table border="0" cellpadding="0" cellspacing="0" width="500" style="max-width:100%;">
                                  <tr>
                                    <td align="left" class="textContent">
                                      <h3 style="color:#5F5F5F;line-height:125%;font-family:Helvetica,Arial,sans-serif;font-size:20px;font-weight:normal;margin-top:0;margin-bottom:3px;text-align:left;"><%= link_to store.name, store,:style=>'text-decoration: none !important;'%></h3>
                                      <div style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:0;color:#5F5F5F;line-height:135%;">
                                          <% store.markets[0..2].each do |market|%>
                                          <h4><%= link_to market.name, market, :style=>'text-decoration: none;'%></h4>
                                          <p  style="padding-left:20px;"><%= market.address%>, <%= market.city %>, <%= market.state%>, <%= market.zipcode %></p>
                                          <p  style="padding-left:20px;"><%= get_day_from_timestamp(market.open_time) %><%= get_time_from_timestamp(market.open_time) %> - <%= get_time_from_timestamp(market.close_time) %></p>
                                          <% end %>
                                      </div>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                              <td align="right" valign="top" class="flexibleContainerBox">
                                <table class="flexibleContainerBoxNext" border="0" cellpadding="0" cellspacing="0" width="200" style="max-width:100%;">
                                  <tr>
                                    <td align="left" class="textContent">
                                      <% products[0..1].each do |product|%>
                                      <div class="col-sm-6">
                                        <% if product.product_images.length > 0 %>
                                        <div style="height:200px;width:200px;background:url(http://<%=  ENV['HOST'] + product.product_images.all.first.image.url(:medium)%>);background-size: 100% 100%,cover;
                                          background-repeat: no-repeat;
                                          background-position: center;"></div>
                                        <% else %>
                                        <div style="height:200px;width:200px;background:url(http://<%=  ENV['HOST'] + product_background[product.group]%>);background-size: 100% 100%,cover;
                                          background-repeat: no-repeat;
                                          background-position: center;"></div>
                                        <% end %>
                                      </div>
                                      <h4 style="text-align:center"><%= product.name %></h4>
                                      <br>
                                      <% end %>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <!-- // MODULE ROW -->
          <!-- MODULE DIVIDER // -->
          <tr>
            <td align="center" valign="top">
              <!-- CENTERING TABLE // -->
              <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                  <td align="center" valign="top">
                    <!-- FLEXIBLE CONTAINER // -->
                    <table border="0" cellpadding="0" cellspacing="0" width="700" class="flexibleContainer">
                      <tr>
                        <td align="center" valign="top" width="700" class="flexibleContainerCell">
                          <table class="flexibleContainerCellDivider" border="0" cellpadding="30" cellspacing="0" width="100%">
