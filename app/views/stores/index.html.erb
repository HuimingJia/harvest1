<div class="row">
  <div class="col-sm-12">
    <% @stores.each do |store| %>
    <div class="col-md-4">
      <%= link_to store do %>
      <div class="thumbnail well">
        <% if store.store_images.all.length == 0 %>
        <div class="text-center thumbnail-image thumbnail-image-md" style="background:url(http://placehold.it/350x150/fff/ffffff&text='')"><span class="glyphicon-md glyphicon glyphicon glyphicon-home"></span></div>
        <% else %>
        <div class="text-center thumbnail-image thumbnail-image-md" style="background: url(<%= store.store_images.all.first.image.url(:small)%>)"></div>
        <% end %>
        <div class="caption">
          <h4 class="card-title"><%= store.name%></h4>
          <span class="card-text"><%= store.description[0..30]%></span>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
