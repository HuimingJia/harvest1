<section id="add_description">
  <%= form_for(store) do |f| %>
  <%= render 'shared/hint_messages', object: store %></br>
  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        <%= f.label :name%>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        <%= f.label :description %>
        <%= f.text_area :description, {:class => "form-control", :rows => "5"}%>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <%= link_to "Back", current_user,  {class: "btn btn-warning col-md-12"} %>
    </div>
    <div class="col-md-6">
      <a id="store_new_next_step" class="btn btn-primary col-md-12">Create</a>
    </div>
  </div></br>
</section>

<section id = "select_market">
    <div class="row">
      <div class="col-md-12">
        <h2>Select Market</h2>
        <input class="form-control" type="text" id="search_market"></input>
        <div class="well" id="search_market_result">
          type
        </div>
      </div>
    </div>
</section>

<section id = "add_store_image">
    <div class="row">
      <div class="col-md-12">
        <%= form_for(StoreImage.new, html: { multipart: true, class: "form dropzone", id: "store_image_upload"}) do |f|  %>
        <%= f.hidden_field :store_id, :id => "store_id"%>
        <div class="form-group">
          <div class="fallback">
            <%= f.file_field :image %><br>
          </div>
        </div>
        <% end %></br>

        <div class="row">
          <div class="col-md-12">
            <%= link_to "Finish UpLoad", current_user,  {class: "btn btn-success col-md-12", id: "finish_upload"} %>
          </div>
        </div>
      </div>
    </div>
</section>
