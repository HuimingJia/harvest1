<header>
  <h1 class="text-center">Explore Best <br> Markets & Products & Stores<h1>
    <div id="search_area">
       <%= render 'shared/search' %>
    </div>
    <div class="text-center">
      <div class="form-horizontal center container" id="search_area"></div>
    </div>
</header>

<section>
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"><i class="glyphicon glyphicon-fire"></i>Popular Products</h2>
        <hr class="section-hr">
      </div>
    </div>
  <div class="row">
        <%= render 'shared/products', locals: { products: @products = Product.all[0..2] } %>
        <%= render 'shared/product_modal' %>
  </div>
</section>

<section>
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"><i class="glyphicon glyphicon-fire"></i>Popular Stores</h2>
        <hr class="section-hr">
      </div>
    </div>
  <div class="row">
      <%= render 'shared/stores', locals: { stores: @stores = Store.all[0..3] } %>
  </div>
</section>

<section>
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"><i class="glyphicon glyphicon-fire"></i>Popular Markets</h2>
        <hr class="section-hr">
      </div>
  </div>
  <div class="row">
        <%= render 'shared/markets', locals: { markets: @markets = Market.all[0..1] } %>
  </div>
</section>
<script>
$(document).ready(function(){
var backgrounds = new Array(
    "linear-gradient(rgba(118, 163, 96, 0.2),rgba(0, 0, 0, 0.3), rgba(118, 163, 96, 0.2)),url('assets/images/search_background_image1.jpeg')"
  , "linear-gradient(rgba(118, 163, 96, 0.2),rgba(0, 0, 0, 0.3), rgba(118, 163, 96, 0.2)),url('assets/images/search_background_image2.jpg')"
  , "linear-gradient(rgba(118, 163, 96, 0.2),rgba(0, 0, 0, 0.3), rgba(118, 163, 96, 0.2)),url('assets/images/search_background_image3.jpg')"
  , "linear-gradient(rgba(118, 163, 96, 0.2),rgba(0, 0, 0, 0.3), rgba(118, 163, 96, 0.2)),url('assets/images/search_background_image4.jpg')"
  , "linear-gradient(rgba(118, 163, 96, 0.2),rgba(0, 0, 0, 0.3), rgba(118, 163, 96, 0.2)),url('assets/images/search_background_image5.jpg')"
  , "linear-gradient(rgba(118, 163, 96, 0.2),rgba(0, 0, 0, 0.3), rgba(118, 163, 96, 0.2)),url('assets/images/search_background_image6.jpg')"
  , "linear-gradient(rgba(118, 163, 96, 0.2),rgba(0, 0, 0, 0.3), rgba(118, 163, 96, 0.2)),url('assets/images/search_background_image7.jpg')"
);
item = backgrounds[Math.floor(Math.random()*backgrounds.length)];
var header = $('header')
header.css('background-image', item);
});
</script>

